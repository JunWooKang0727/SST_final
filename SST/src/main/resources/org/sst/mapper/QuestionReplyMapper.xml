<mapper namespace="org.sst.mapper.QuestionReplyMapper">
	<insert id="insert">
		insert into question_reply (rno,q_num,reply,replyer, replydate)
		values (seq_reply.nextval, #{q_num} , #{reply}, #{replyer}, sysdate)
	</insert>
	
	<select id="read" resultType="org.sst.domain.QuestionReplyVO">
		select * from question_reply where rno = #{rno}
	</select>
	
	<delete id="delete">
		delete from question_reply where rno = #{rno}
	</delete>
	
	<update id="update">
		update question_reply set reply = #{reply}, updatedate = sysdate where rno = #{rno}
	</update>
