<update id="updateLike" parameterType="int">
    update question_reply set
        faqrp_likeCnt = faqrp_likeCnt +1
    where
        rno =#{rno}
</update>
 
<update id="updateHate" parameterType="int">
    update question_reply set
        faqrp_hateCnt = faqrp_hateCnt +1
    where
        rno =#{rno}
</update>

