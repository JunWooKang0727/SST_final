<select id="getListWithPaging" resultType="org.sst.domain.QuestionReplyVO">

  <![CDATA[
 select  rno, q_num, reply, replyer, replydate, updatedate
 from 
   (
    select /*+INDEX(question_reply idx_reply) */ 
      rownum rn,  rno, q_num, reply, replyer, replyDate, updatedate
    from question_reply
    where q_num =  #{q_num}
    and rno > 0
    and rownum <= #{cri.pageNum} * #{cri.amount}
   ) where rn > (#{cri.pageNum} -1) * #{cri.amount}
]]>

</select>

<select id="getCountByBno" resultType="int">
<![CDATA[
select count(rno) from question_reply where q_num = #{q_num}
]]>
</select>
